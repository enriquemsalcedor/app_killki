<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialogos.DialogoMensaje">

    <LinearLayout
        android:id="@+id/barraSuperiorId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/killki_green"
        android:elevation="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="387dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="CONFIGURACIÓN DE VOZ"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuerpo"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="@color/killki_grey"
        android:elevation="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/y"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:elevation="6dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibtn_grabar"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:src="@drawable/ic_action_mic" />

            <ImageButton
                android:id="@+id/ibtn_reproducir"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="70dp"
                android:layout_weight="1"
                android:background="@drawable/boton"
                android:src="@drawable/ic_action_play" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/boton"
            android:text="guardar" />

        <ImageButton
            android:id="@+id/ibtn_ayuda"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:background="@color/killki_grey"
            android:src="@drawable/ic_action_help" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuerpo_ayuda"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/killki_grey"
        android:elevation="6dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:elevation="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"
                android:drawableLeft="@drawable/ic_action_mic"
                android:gravity="center_vertical"
                android:text="   Selecciona este botón \n para grabar tu voz."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:autoSizeMinTextSize="15sp"
                android:autoSizeMaxTextSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"
                android:drawableLeft="@drawable/ic_action_mic_off"
                android:gravity="center_vertical"
                android:text="   Selecciona este botón para detener\n la grabación."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:autoSizeMinTextSize="15sp"
                android:autoSizeMaxTextSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:elevation="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="272dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="1dp"
                android:drawableLeft="@drawable/ic_action_play"
                android:gravity="center_vertical"
                android:text="   Selecciona este botón para reproducir\n la grabación."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:autoSizeMinTextSize="15sp"
                android:autoSizeMaxTextSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cerrar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/boton"
            android:text="cerrar" />

    </LinearLayout>

</LinearLayout>