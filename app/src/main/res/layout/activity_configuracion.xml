<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/killki_grey"
    tools:context=".MainActivity">


    <View
        android:id="@+id/view4"
        android:layout_width="410dp"
        android:layout_height="46dp"
        android:layout_marginBottom="25dp"
        android:background="@color/killki_green"
        android:backgroundTint="@color/killki_green"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="2dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:background="@color/killki_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imbtn_home"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="10dp"
        android:background="@color/killki_green"
        android:onClick="irNoticias"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/imbtn_contacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/ic_action_book" />

    <ImageButton
        android:id="@+id/btn_inicio"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="@color/killki_green"
        android:textSize="40sp"
        android:onClick="irInicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <TextView
        android:id="@+id/imbtn_ong"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:background="@color/killki_green"
        android:gravity="center"
        android:onClick="irOng"
        android:text="ONG"
        android:textColor="#0C0C0C"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/imbtn_contacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />


    <ImageButton
        android:id="@+id/imbtn_locacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@color/killki_green"
        android:onClick="irMapa"
        app:layout_constraintBottom_toBottomOf="@+id/imbtn_ong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imbtn_contacto"
        app:layout_constraintTop_toTopOf="@+id/imbtn_ong"
        app:srcCompat="@drawable/ic_action_name" />

    <ImageButton
        android:id="@+id/imbtn_contacto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="@color/killki_green"
        android:onClick="irContacto"
        app:layout_constraintBottom_toBottomOf="@+id/imbtn_locacion"
        app:layout_constraintEnd_toStartOf="@+id/imbtn_locacion"
        app:layout_constraintStart_toEndOf="@+id/imbtn_home"
        app:layout_constraintTop_toTopOf="@+id/imbtn_locacion"
        app:srcCompat="@drawable/ic_action_contact" />

    <View
        android:id="@+id/view3"
        android:layout_width="413dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="@color/killki_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_direccion" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ovalado"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="CONFIGURACIÓN"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="95dp"
        android:text="UBICACIÓN"
        android:gravity="center"
        android:drawableEnd="@drawable/ic_action_name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtv_direccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="361dp"
        android:background="@color/killki_green"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:srcCompat="@drawable/ic_action_config"
        tools:layout_editor_absoluteY="2dp" />

    <ImageButton
        android:id="@+id/imageOff"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="20dp"
        android:background="@color/killki_green"
        android:onClick="salir"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:srcCompat="@drawable/ic_action_close"
        tools:layout_editor_absoluteY="2dp" />

    <ListView
        android:id="@+id/lv_conf"
        android:layout_width="362dp"
        android:layout_height="300dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />


    <ImageView
        android:id="@+id/btn_whatsapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/redondeado"
        android:src="@drawable/whatsapp_r"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtvoz"
        android:layout_width="176dp"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="12sp"
        android:background="@color/killki_green"
        android:text="Dictar Alerta de Voz"
        android:textAlignment="viewEnd"
        android:paddingEnd="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_voz_alerta" />


    <ImageView
        android:id="@+id/btn_voz_alerta"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/redondeado"
        android:src="@drawable/boton_alerta_voz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtwhatsapp"
        android:layout_width="176dp"
        android:layout_height="23dp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="12sp"
        android:background="@color/killki_green"
        android:paddingStart="5dp"
        android:text="Enviar Alerta de Whatsapp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_whatsapp" />

    <TextView
        android:id="@+id/txtwhatsapp2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="12sp"
        android:background="@color/killki_green"
        android:paddingStart="5dp"
        android:text="Alerta de Whatsapp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_whatsapp" />

    <ImageView
        android:id="@+id/btn_sos"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="65dp"
        android:src="@drawable/sos_fondo_transparente_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtsos"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="176dp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="12sp"
        android:background="@color/killki_green"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Envie la alerta moviendo 3 veces seguidas su celular hacia los lados"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_sos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>